<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodelvar"
            type="com.amaar.eilaji.MyViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgraund">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_text_view"
                android:layout_width="366dp"
                android:layout_height="210dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Take Photo"
                app:shapeAppearanceOverlay="@style/Circular"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_description_edit_view"
                android:layout_width="366dp"
                android:layout_height="61dp"
                android:layout_marginTop="96dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:text="@={viewmodelvar.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photo_text_view" />

            <EditText
                android:id="@+id/first_day_view"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="First Day"
                android:inputType="date"
                android:text="@={viewmodelvar.firstDay}"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.579" />

            <EditText
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:hint="How many times a day"
                android:inputType="time"
                android:text="@={viewmodelvar.manyTime}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_day_view" />

            <EditText
                android:id="@+id/last_day_view"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="Last Day"
                android:inputType="date"
                android:text="@={viewmodelvar.lastDay}"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_description_edit_view" />

            <Button
                android:id="@+id/save_btn_view"
                android:layout_width="366dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="80dp"
                android:background="@color/btn"


                android:text="@string/save"
                android:textColor="#F3EFEF"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/take_photo_text_view"
                android:layout_width="143dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@color/btn"
                android:text="Take Photo"
                android:textAlignment="center"
                android:textColor="#F4F0F0"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photo_text_view" />

            <ImageButton
                android:id="@+id/take_photo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/take_photo_text_view"
                app:layout_constraintTop_toBottomOf="@+id/photo_text_view"
                app:srcCompat="@drawable/ic_baseline_add_a_photo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>